import bpy
import time


last_selection = []
sel_objs = bpy.context.selected_objects


def assembly_handler(scene):
    global last_selection
    if bpy.context.selected_objects != last_selection:
        last_selection = bpy.context.selected_objects
        print("Updated", time.time())

bpy.app.handlers.depsgraph_update_pre.clear()
bpy.app.handlers.depsgraph_update_pre.append(assembly_handler)